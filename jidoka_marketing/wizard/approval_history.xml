<odoo>
	<record id="views_approve_with_commitment_so" model="ir.ui.view">
		<field name="name">Approve</field>
		<field name="model">approval.history.so.wizard</field>
		<field name="arch" type="xml">
			<form string="Asign">
				<group>
					<group>
						<field name="partner_id" readonly="1"/>
						<field name="shipping_date" options="{'no_create': True, 'no_open': True}"/>
					</group>
				</group>
				<group>
					<group>
						<field name="reason" />
					</group>
				</group>
				<footer>
					<button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="1"/>
					<button name="action_confirm_tes" string="Confirm " type="object" class="oe_highlight" />
		                    or
					<button string="Cancel" class="oe_link" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="views_reject_with_commitment_so" model="ir.ui.view">
		<field name="name">Reject</field>
		<field name="model">approval.history.so.wizard.reject</field>
		<field name="arch" type="xml">
			<form string="Asign">
				<group>
					<group>
						<field name="reason" required="1"/>
					</group>
				</group>
				<footer>
					<button name="action_confirm" string="Confirm" type="object" class="oe_highlight" />
		                    or
					<button string="Cancel" class="oe_link" special="cancel" />
				</footer>
			</form>
		</field>
	</record>


