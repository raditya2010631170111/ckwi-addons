<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="maintenance_inprogress_mail" model="mail.template">
        <field name="name">Maintenance InProgress</field>
        <field name="model_id" 
          ref="fik_equipment_maintenance.model_maintenance_request"/>
          
        <field name="email_from"></field>

        <field name="email_to" >${object.employee_id.work_email|safe}</field>

        <field name="subject"><![CDATA[Maintenance InProgress]]>
        </field>

        <field name="body_html">
          <![CDATA[
              Dear ${object.employee_id.name},
              <br/><br/>
              your maintenance has been in progress 
              ]]>
        </field>
    </record>
</odoo>